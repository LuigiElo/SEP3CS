@page
@model IndexModel
@{
    ViewData["Title"] = "Home page - PePe";
}
<style type='text/css'>
  body {
      background-image: linear-gradient(-225deg, #7DE2FC 0%, #B9B6E5 100%);
  }
</style>






<a class="btn btn-sucess" onclick="confetti.stop()" data-toggle="modal" data-target=".bootstrapmodal" ><span class="glyphicon-eye-open"> </span> Create Party with login! </a>

<div class="modal fade bootstrapmodal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title"> Log In</div>
                <button data-dismiss="modal" class="close" onclick="confetti.start()"> <span>&times;</span></button>

            </div>
            
            <div class="modal-body">
                <form method="post" asp-page-handler="Login">
                    <input name="queryString" type="hidden" value="@Request.QueryString"/>
                    <div class="form-group">
                        <label asp-for="Input.Name"></label>
                        <input asp-for="Input.Name"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password"/>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"> Log In</button>
                    </div>
                </form>
            </div>
            
            <div class="modal-footer">
            
                
            </div>
            
            
            

        </div>
    </div>

</div>












<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <div class="text-center">
        <a class="navbar-brand" asp-area="" asp-page="/CreateParty">Create your party</a>
    </div>
    
    
</div>




















